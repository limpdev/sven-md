  function rehypeCodeLanguageIcons() {
    return (tree) => {
      visit(tree, (node) => {
        if (node.type === "element" && node.tagName === "pre") {
          const codeElement = node.children.find(
            (child) => child.type === "element" && child.tagName === "code"
